<FCToolbarButton>:
    background_color: 0,0,0,0
    color: 0,0,0,1
    size_hint: None, None
    size: self.texture_size[0], sp(50)
    padding: sp(20), sp(10)
    font_size: sp(25)

<FCToolbar>:
    size_hint_y: None
    canvas.before:
        Color:
            rgba: 247/255,231/255,0,1
        Rectangle:
            pos: self.pos
            size: self.size

    FCToolbarButton:
        id: back_button
        text: "< Back"
        on_release: root.back_callback()

    Label:

    FCToolbarButton:
        id: home_button
        text: "Home"
        on_release: root.home_callback()
