<FCContactButton>:
    size_hint_y: None
    height: sp(100)

    RelativeLayout:

        pos: self.parent.pos
        size: self.parent.size

        Image:
            id: img
            source: root.person_image

            size_hint_y: None
            size_hint_x: None
            height: self.parent.height - sp(20)
            width: self.parent.height * self.image_ratio
            y: sp(10)
            allow_stretch: True
            keep_ratio: True

        Label:

            text: root.person_name
            font_size: sp(20)
            bold: True
            pos: sp(90), sp(70)
            size_hint: None, None
            size: self.texture_size

        Label:

            text: root.person_area
            font_size: sp(18)
            pos: sp(90), sp(40)
            size_hint: None, None
            size: self.texture_size

        Label:

            text: root.person_reason
            font_size: sp(18)
            pos: sp(90), sp(10)
            size_hint: None, None
            size: self.texture_size

